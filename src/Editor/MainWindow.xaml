<Window x:Class="Terrain.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:interop="clr-namespace:Terrain.Engine.Interop;assembly=Terrain.Engine.Interop"
        mc:Ignorable="d"
        Title="Terrain Editor" Width="1280" Height="720"
        Closing="Window_Closing">
    <Grid Background="#333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="2" Padding="0 4">
            <MenuItem Header="File">
                <MenuItem x:Name="miOpen" Header="Open" Click="miOpen_Click" />
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Background="#CCC">
            <RadioButton x:Name="rbEditorToolRaiseTerrain" Content="Raise Terrain"
                         GroupName="EditorTool" IsChecked="True"
                         Style="{StaticResource {x:Type ToggleButton}}" Padding="4"
                         Checked="OnEditorToolButtonSelected" />
            <RadioButton x:Name="rbEditorToolLowerTerrain" Content="Lower Terrain"
                         GroupName="EditorTool"
                         Style="{StaticResource {x:Type ToggleButton}}" Padding="4"
                         Checked="OnEditorToolButtonSelected" />
        </StackPanel>
        <interop:Viewport x:Name="sceneViewport" Grid.Row="2" World="Scene" />
        <ScrollViewer Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Expander Style="{StaticResource SidebarExpanderStyle}" Header="HEIGHTMAP"
                          IsExpanded="True">
                    <interop:Viewport x:Name="heightmapPreviewViewport" Width="300" Height="300"
                                      World="HeightmapPreview" />
                </Expander>
                <Expander Style="{StaticResource SidebarExpanderStyle}" Header="BRUSH"
                          IsExpanded="True">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Brush Radius" Foreground="#888" Margin="12 12 12 8" />
                        <Grid Margin="12 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="32" />
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="brushRadiusSlider" Minimum="32" Maximum="512" Value="128"
                                    SmallChange="1" LargeChange="16" TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="brushRadiusSlider_ValueChanged" />
                            <TextBlock Text="{Binding ElementName=brushRadiusSlider, Path=Value}"
                                       Grid.Column="1" Foreground="#888" Margin="4 0 0 0" />
                        </Grid>
                        <TextBlock Text="Brush Falloff" Foreground="#888" Margin="12 12 12 8" />
                        <Grid Margin="12 0 12 12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="32" />
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="brushFalloffSlider" Minimum="0" Maximum="0.99" Value="0.75"
                                    SmallChange="0.01" LargeChange="0.1" TickFrequency="0.01"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="brushFalloffSlider_ValueChanged" />
                            <TextBlock Text="{Binding ElementName=brushFalloffSlider, Path=Value}"
                                       Grid.Column="1" Foreground="#888" Margin="4 0 0 0" />
                        </Grid>
                    </StackPanel>
                </Expander>
                <Expander Style="{StaticResource SidebarExpanderStyle}" Header="SCENE"
                          IsExpanded="True">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Light Direction" Foreground="#888" Margin="12 12 12 8" />
                        <Grid Margin="12 0 12 12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="32" />
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="lightDirectionSlider" Minimum="-1" Maximum="1" Value="0.5"
                                    SmallChange="0.01" LargeChange="0.1" TickFrequency="0.01"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="lightDirectionSlider_ValueChanged" />
                            <TextBlock Text="{Binding ElementName=lightDirectionSlider, Path=Value}"
                                       Grid.Column="1" Foreground="#888" Margin="4 0 0 0" />
                        </Grid>
                    </StackPanel>
                </Expander>
                <Expander Style="{StaticResource SidebarExpanderStyle}" Header="MATERIAL"
                          IsExpanded="True">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Texture Size (world units)" Foreground="#888" Margin="12 12 12 8" />
                        <Grid Margin="12 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="32" />
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="textureSizeSlider" Minimum="0.1" Maximum="16" Value="2.5"
                                    SmallChange="0.01" LargeChange="0.1" TickFrequency="0.01"
                                    IsSnapToTickEnabled="True" ValueChanged="textureSizeSlider_ValueChanged" />
                            <TextBlock Text="{Binding ElementName=textureSizeSlider, Path=Value}"
                                       Grid.Column="1" Foreground="#888" Margin="4 0 0 0" />
                        </Grid>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
